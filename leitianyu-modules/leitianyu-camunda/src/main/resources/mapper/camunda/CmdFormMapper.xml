<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jijia.camunda.mapper.newM.CmdFormMapper">

    <resultMap type="CmdForm" id="CmdFormResult">
        <result property="formId"    column="form_id"    />
        <result property="name"    column="name"    />
        <result property="status"    column="status"    />
        <result property="formConfig"    column="form_config"    />
        <result property="widgetList"    column="widget_list"    />
        <result property="version"    column="version"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCmdFormVo">
        select form_id, name, status, form_config, widget_list, version, remark, del_flag, create_by, create_time, update_by, update_time from cmd_form
    </sql>

    <select id="selectCmdFormList" parameterType="CmdForm" resultMap="CmdFormResult">
        <include refid="selectCmdFormVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="formConfig != null  and formConfig != ''"> and form_config = #{formConfig}</if>
            <if test="widgetList != null  and widgetList != ''"> and widget_list = #{widgetList}</if>
            <if test="version != null "> and version = #{version}</if>
        </where>
    </select>


</mapper>
